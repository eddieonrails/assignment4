<!DOCTYPE html>
<html>
<body bgclor ="#33B3A6">

    <h2>SRC VOTING REGISTRATION</h2>
</body>

<%= form_for @student, :url => { :action => "create" }, :html => {:class => "nifty_form"} do |f| %>


                <div>
               <%= f.label :Name %> <br/> 
               <%= f.text_field :name %>      <br/>   <br/>
                  </div>

                <div>
               <%= f.label :Surname %><br/> 
               <%= f.text_field :surname %>   <br/>    <br/>
                  </div>
              <div>
               <%= f.label :Student_Number %> <br/>
               <%= f.text_field :student_no %><br/>   <br/>
                  </div>
                   <div>
                 <%= f.label :ID_No %> <br/>
                 <%= f.text_field :id_no %><br/>   <br/>
                    </div>
                  <div>
               <%= f.label :Email %>  <br/>
               <%= f.email_field :email %>   <br/>   <br/>
                   </div>
  <div>
               <%= f.label :Password %>  <br/>
               <%= f.password_field :surname %>  <br/>   <br/>
  </div>
  <div>
               <%= f.label :Campus %>
               <%= f.radio_button :campus, 'auckland_park' %>  kingsway (apk)
               <%= f.radio_button :campus, 'bunting_road' %>  bunting road (apb)
               <%= f.radio_button :campus, 'soweto_campus' %>  soweto campus
    </div>
    <div class="actions">     <br/>
        <%= f.submit "Register" %>
      </div>

<%end%>

</html>